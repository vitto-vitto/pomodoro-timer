{
    "manifest_version": 3,
    "name": "Pomodoro Timer Extension",
    "version": "1.0.0",
    "description": "Chrome Extension Practice",
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "action": {
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        },
        "default_title": "Timer Extension Atcion Title",
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "permissions": ["storage", "alarms"],
    "background": {
        "service_worker": "background.js"
    }
}